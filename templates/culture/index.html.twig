{% extends 'base.html.twig' %}

{% block title %}Culture index{% endblock %}

{% block body %}
    <h1>Culture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Year</th>
                <th>DateSpray</th>
                <th>Period</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for culture in cultures %}
            <tr>
                <td>{{ culture.id }}</td>
                <td>{{ culture.year ? culture.year|date('Y-m-d') : '' }}</td>
                <td>{{ culture.dateSpray ? culture.dateSpray|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ culture.period ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('culture_show', {'id': culture.id}) }}">show</a>
                    <a href="{{ path('culture_edit', {'id': culture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('culture_new') }}">Create new</a>
{% endblock %}
